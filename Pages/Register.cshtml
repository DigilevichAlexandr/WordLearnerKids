@page
@model WordLearnerKids.Pages.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<section class="panel">
    <h1>Регистрация</h1>

    <p class="muted">Создайте аккаунт для заметок и хранения файлов.</p>
    <div asp-validation-summary="ModelOnly" class="error"></div>

    <form method="post" class="grid">
        <input asp-for="CaptchaToken" type="hidden" />

        <div>
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" autocomplete="email" />
            <span asp-validation-for="Input.Email" class="error"></span>
        </div>

        <div>
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" autocomplete="new-password" />
            <span asp-validation-for="Input.Password" class="error"></span>
        </div>

        <div>
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" />
            <span asp-validation-for="Input.ConfirmPassword" class="error"></span>
        </div>

        <div>
            <label asp-for="Input.CaptchaAnswer">Капча: решите пример @Model.CaptchaQuestion = ?</label>
            <input asp-for="Input.CaptchaAnswer" autocomplete="off" />
            <span asp-validation-for="Input.CaptchaAnswer" class="error"></span>
        </div>

        <button type="submit">Зарегистрироваться</button>
    </form>

    <p class="muted">Уже есть аккаунт? <a asp-page="/Login">Войти</a></p>
</section>
